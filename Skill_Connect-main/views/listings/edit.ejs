<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label mb-3">Title</label>
             <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" required>
             <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label mb-3">Description</label>
             <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
              <div class="invalid-feedback">Enter short description</div>
        </div>

        <div class="mb-3">
            Original Listing Image<br>
            <img src="<%= originalImageUrl %>">
        </div>

         <div class="row">
        <div class="mb-3 col-md-8">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control">
        </div>
        <div class="mb-3 col-md-4">
            <label for="listing" class="form-label">Category:</label>
            <select name="listing[category]" id="category" class="form-control" required>
    <option value="Women's Salon & Spa" <%= listing.category === "Women's Salon & Spa" ? 'selected' : '' %>>Women's Salon & Spa</option>
    <option value="Men's Salon & Spa" <%= listing.category === "Men's Salon & Spa" ? 'selected' : '' %>>Men's Salon & Spa</option>
    <option value="AC & Appliances Repair" <%= listing.category === 'AC & Appliances Repair' ? 'selected' : '' %>>AC & Appliances Repair</option>
    <option value="Plumber" <%= listing.category === 'Plumber' ? 'selected' : '' %>>Plumber</option>
    <option value="Carpenter" <%= listing.category === 'Carpenter' ? 'selected' : '' %>>Carpenter</option>
    <option value="Cleaning & Pest Control" <%= listing.category === 'Cleaning & Pest Control' ? 'selected' : '' %>>Cleaning & Pest Control</option>
    <option value="Electrician" <%= listing.category === 'Electrician' ? 'selected' : '' %>>Electrician</option>
    <option value="Water Purifier" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Water Purifier</option>
    <option value="Painting & Water Proofing" <%= listing.category === 'Painting & Water Proofing' ? 'selected' : '' %>>Painting & Water Proofing</option>
</select>

        </div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label mb-3">Price</label>
             <input name="listing[price]" value="<%=listing.price%>" type="number" class="form-control" required>
             <div class="invalid-feedback">enter price</div>
        </div>
         <div class="mb-3 col-md-8">
            <label for="country" class="form-label mb-3">Country</label>
             <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
             <div class="invalid-feedback">Enter Country</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label mb-3">Location</label>
             <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control"required>
             <div class="invalid-feedback">Enter Location</div>
        </div>
       
        <br><br>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br>
    </form>
     </div>
    </div>
    
